//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "DtModule.h"
#include "TruckEditFormUnit.h"
#include "MainForm.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	clickCounter = 0;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::FDQuery1AfterPost(TDataSet *DataSet)
{
	Label1->Caption = FDQuery1->ChangeCount;
}
//---------------------------------------------------------------------------
void TForm1::edit()
{
	TTruckEditForm *form;
	if (!FDQuery1->Eof)
	{
		form = new TTruckEditForm(this);
		form->setId(FDQuery1->FieldByName("TID")->AsInteger);
		if (form->ShowModal() == mrOk)
		{
			FDQuery1->Refresh();
		}
		delete form;
	}
}


void __fastcall TForm1::Button1Click(TObject *Sender)
{
    edit();
	TTruckEditForm *form;
//	ShowMessage(String(FDQuery1->FieldByName("TID")->AsInteger) + " " + FDQuery1->Eof);
	if (!FDQuery1->Eof)
	{
		form = new TTruckEditForm(this);
		form->setId(FDQuery1->FieldByName("TID")->AsInteger);
		if (form->ShowModal() == mrOk)
		{
			FDQuery1->Refresh();
		}
		delete form;
	}

	//FDMemTable1->
}
//---------------------------------------------------------------------------

void __fastcall TForm1::DBGrid1DblClick(TObject *Sender)
{
//	ShowMessage(String(FDQuery1->FieldByName("TID")->AsInteger) + " " + FDQuery1->Eof);
	if (Timer->Enabled)
	{
		edit();
	}
	Timer->Enabled = false;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::DBGrid1CellClick(TColumn *Column)
{
	Timer->Enabled = true;
//	ShowMessage(String(FDQuery1->FieldByName("TID")->AsInteger) + " " + FDQuery1->Eof);
}
//---------------------------------------------------------------------------

void __fastcall TForm1::TimerTimer(TObject *Sender)
{
	Timer->Enabled = false;
}
//---------------------------------------------------------------------------

